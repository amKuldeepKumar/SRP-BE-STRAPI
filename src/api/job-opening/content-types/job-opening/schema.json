    },
    "experience": {
      "type": "string"
    },
    "tags": {
      "type": "blocks"
    },
    "description": {
      "type": "richtext"
    },
    "responsibilities": {
      "type": "richtext"
    },
    "requirements": {
      "type": "richtext"
    },
    "isOpen": {
      "type": "boolean",
      "required": true,
      "default": true
    }
  }
}
