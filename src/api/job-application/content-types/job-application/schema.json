{
  "kind": "collectionType",
  "collectionName": "job_applications",
  "info": {
    "singularName": "job-application",
    "pluralName": "job-applications",
    "displayName": "Job-Application"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": false
    },
    "mobile": {
      "type": "integer",
      "min": 9999999999,
      "max": 9999999999
    },
    "job_ids": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::job-opening.job-opening",
      "inversedBy": "job_applications"
    },
    "night_shift_friendly": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "total_experience": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0,
      "max": 40
    },
    "why_you": {
      "type": "text"
    },
    "previous_employer": {
      "type": "string"
    }
  }
}
