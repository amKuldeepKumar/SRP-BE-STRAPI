{
  "kind": "collectionType",
  "collectionName": "job_applications",
  "info": {
    "singularName": "job-application",
    "pluralName": "job-applications",
    "displayName": "Job-Application"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "mobile": {
      "type": "integer",
      "min": 10,
      "max": 10
    },
    "job_opening": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::job-opening.job-opening"
    },
    "night_shift_friendly": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  }
}
